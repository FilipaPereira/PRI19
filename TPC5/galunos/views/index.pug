extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3 Listagem de Alunos
        .w3-card-4
            table.w3-table-all
                tr
                    th Identificador
                    th Nome
                    th Curso
                    th Operações
                each i in lista
                    tr
                        td= i.ident
                        td= i.nome
                        td= i.curso
                        td
                            button.w3-button.w3-green(onclick="apagaAluno('" + i.ident + "')") Apagar
                            a(href='/alunos/' + i.ident)
                                button.w3-button.w3-green.w3-margin-left Consultar
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3 Novo aluno
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    label
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type="text", name="ident")
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type="text", name="nome")
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type="text", name="curso")
                    input.w3-btn.w3-green.w3-margin(type='submit' value='Registar')
        footer.w3-container.w3-teal
            