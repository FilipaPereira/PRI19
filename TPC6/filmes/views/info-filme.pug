extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3= filme.title
        .w3-card-4
            table.w3-table-all
                tr
                    th Título
                        td= filme.title
                tr
                    th Ano
                        td= filme.year
                tr
                    th Elenco
                        td= filme.cast
                tr
                    th Género
                        td= filme.genres
        footer.w3-container.w3-teal
            address.w3-right Voltar à lista de filmes
                a(href='/filmes')
                    button.w3-button.w3-green.w3-margin Voltar